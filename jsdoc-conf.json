{
  "opts": {
    "destination": "out/",
    "readme": "./README.md",
    "template": "./node_modules/clean-jsdoc-theme",
    "theme_opts": {
      "search": false
    }
  },
  "source": {
    "exclude": ["node_modules", "test"],
    "includePattern": ".+\\.js(doc)?$"
  },
  "plugins": [
    "plugins/markdown"
  ],
  "templates": {
    "cleverLinks": true,
    "showInheritedInNav": false
  },
  "markdown": {
    "hardwrap": false,
    "idInHeadings": true
  }
}
